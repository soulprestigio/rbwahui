<div class="flex flex-col">
<%= render "layouts/navbar" %>
<br>
<div class="flex flex-wrap w-full mt-4">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Wahuiboards" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Wahuiboards</h1>
    <%= link_to "New wahuiboard", new_wahuiboard_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
  </div>
 <div class="py-5"></div>
<table class="table-auto border border-black shadow-md">
  <thead>
    <tr>
      <th class="border border-black px-4 py-2">ID</th>
      <th class="border border-black px-4 py-2">Image</th>
      <th class="border border-black px-4 py-2">Name</th>
      <th class="border border-black px-4 py-2">Description</th>
      <th class="border border-black px-4 py-2">Status</th>
      <th class="border border-black px-4 py-2">Action</th>
    </tr>
  </thead>
  <tbody>


  <div id="wahuiboards" class="min-w-full">
    <% @wahuiboards.each do |wahuiboard| %>
      </tr>
      <%= render wahuiboard %>
      <td>
        <%= link_to "Show this wahuiboard", wahuiboard, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
      </td>
      </tr>
    <% end %>
      </tbody>
      </table>
  </div>
</div>
</div>