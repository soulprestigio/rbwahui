<tr id="<%= dom_id board %>">
  <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
    <p class="text-gray-900 whitespace-no-wrap"><%= board.board_number %></p>
  </td>
  <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
    <p class="text-gray-900 whitespace-no-wrap"><%= board.board_name %></p>
  </td>
  <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
    <p class="text-gray-900 whitespace-no-wrap"><%= board.total_bet %></p>
  </td>
  <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-right">
    <%= link_to "Show", board, class: "text-blue-500 hover:text-blue-700" %>
    <%= link_to "Edit", edit_board_path(board), class: "text-blue-500 hover:text-blue-700 ml-4" %>
  </td>
</tr>
