<div class="container mx-auto px-4 py-8">
  <div class="max-w-md mx-auto bg-white rounded-lg shadow-md overflow-hidden">
    <div class="p-6">
      <p class="text-green-500"><%= notice %></p>

      <div class="mb-4">
        <strong class="text-gray-700">Board number:</strong>
        <p class="text-gray-900"><%= @board.board_number %></p>
      </div>

      <div class="mb-4">
        <strong class="text-gray-700">Board name:</strong>
        <p class="text-gray-900"><%= @board.board_name %></p>
      </div>

      <div class="mb-4">
        <strong class="text-gray-700">Board synonyms:</strong>
        <p class="text-gray-900"><%= @board.board_synonyms %></p>
      </div>

      <div class="mb-4">
        <strong class="text-gray-700">Board description:</strong>
        <p class="text-gray-900"><%= @board.board_description %></p>
      </div>

      <div class="mb-4">
        <strong class="text-gray-700">Total bet:</strong>
        <p class="text-gray-900"><%= @board.total_bet %></p>
      </div>

      <div class="flex justify-end mt-6">
        <%= link_to "Edit this board", edit_board_path(@board), class: "text-blue-500 hover:text-blue-700" %>
        <span class="mx-2">|</span>
        <%= link_to "Back to boards", boards_path, class: "text-blue-500 hover:text-blue-700" %>
        <%= button_to "Destroy this board", @board, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded ml-4" %>
      </div>
    </div>
  </div>
</div>
