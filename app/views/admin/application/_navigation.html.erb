<div class="w-64 bg-gray-800 text-white p-4">
  <h1 class="text-2xl font-bold mb-4"><%= application_title %></h1>
  <nav>
    <% Administrate::Namespace.new(namespace).resources_with_index_route.each do |resource| %>
      <%= link_to(
        display_resource_name(resource),
        resource_index_route(resource),
        class: "block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700 hover:text-white"
      ) if accessible_action?(model_from_resource(resource), :index) %>
    <% end %>

    <hr class="my-4 border-gray-600">

    <%= link_to(t("administrate.navigation.back_to_app"), root_url, class: "block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700 hover:text-white") if defined?(root_url) %>
  </nav>
</div>